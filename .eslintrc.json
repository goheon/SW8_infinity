{
  "root": true,
  "overrides": [
    {
      "files": ["**/*.js"],
      "env": {
        "node": true
      },
      "parserOptions": {
        "ecmaVersion": 2018
      },
      "rules": {
        // "camelcase": "error",
      }
    },
    {
      "files": ["views/**/*.js"],
      "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
      },
      "rules": {
        // 여기에 ES6 관련 규칙을 추가할 수 있습니다.
      }
    },
    {
      "files": ["!(views)/**/*.js"],
      "parserOptions": {
        "ecmaVersion": 2015
      },
      "rules": {
        // CommonJS 관련 규칙을 추가할 수 있습니다.
      }
    }
  ]
}
